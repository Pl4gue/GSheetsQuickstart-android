<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showHomeworkCardViewSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultSubject"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/showHomeworkCardViewEntryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultEntryDate"
            />

        <TextView
            android:id="@+id/showHomeworkCardViewDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultDueDate" />

        <TextView
            android:id="@+id/showHomeworkCardViewHomework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultHomework" />
    </LinearLayout>
</android.support.v7.widget.CardView>